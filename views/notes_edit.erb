<form action="/notes/update" method="post">
  <input type="hidden" name="id" value="<%= @note.id %>" />

  <label>Title:</label>
  <input type="text" name="note[title]" value="<%= @note.title.dump %>"/>

  <p>Summary:</p>
  <textarea name="note[summary]">
    <%= @note.summary %>
  </textarea>
</form>
